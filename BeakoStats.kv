#:kivy 2.1.0

<Row@RecycleKVIDsDataViewBehavior+BoxLayout>:
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            size: self.size
            pos: self.pos
    value: ''
    Label:
        id: name
    Label:
        text: root.value

<BeakoStats>:    
    stats: rv  
    namespaces: rv1

    GridLayout:
        cols: 2
        rows: 2
        height: root.height
        spacing: dp(5)
        
        Label:
            font_size: 30  
            center_x: root.width / 4
            top: root.top - 25
            text: str(root.servers)
            
        Label:
            font_size: 30  
            center_x: root.width * 3 / 4
            top: root.top - 25
            text: str(root.members)

        RecycleView:
            id: rv
            scroll_type: ['bars', 'content']
            scroll_wheel_distance: dp(114)
            bar_width: dp(10)
            viewclass: 'Row'
            RecycleBoxLayout:
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                spacing: dp(2)
    
        RecycleView:
            id: rv1
            scroll_type: ['bars', 'content']
            scroll_wheel_distance: dp(114)
            bar_width: dp(10)
            viewclass: 'Row'
            RecycleBoxLayout:
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                spacing: dp(2)